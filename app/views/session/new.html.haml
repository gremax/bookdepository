%h1 Sign in

.row
  .col-md-offset-3.col-md-6
    = form_for :session, html: { id: 'new_session' } do |f|
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control'
      .form-group
        = f.label :password
        = f.password_field :password, class: 'form-control'
      .form-group
        = f.submit 'Sign in', class: 'btn btn-primary'
