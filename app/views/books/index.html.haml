%h1 Book Depository

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Title
      %th Price
      %th Stock
      %th Options
  %tbody
    - @books.each do |book|
      %tr
        %th{scope: 'row'}= book.id
        %th= link_to book.title, book
        %th= book.price
        %th= book.stock
        %th
          = link_to 'Edit', edit_book_path(book), class: 'btn btn-success btn-xs'
          = link_to 'Delete', book_path(book), class: 'btn btn-danger btn-xs',
            method: :delete, data: { confirm: 'Are you sure?' }

%p= link_to 'Add new book', new_book_path, class: 'btn btn-primary btn-sm'
